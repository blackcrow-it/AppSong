@model AppSong.Models.Song

@{
    ViewData["Title"] = "Edit";
    var categories = ViewData["categories"] as List<Category>;
    string[] list = new string[] { };
}

<h2>Edit</h2>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thumbnail" class="control-label"></label>
                <input asp-for="Thumbnail" class="form-control" />
                <span asp-validation-for="Thumbnail" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label asp-for="SongCategories" class="control-label"></label>
                <ul>

                    @foreach (var c in categories)
                    {
                        var chk = false;
                        foreach (var currentC in Model.SongCategories)
                        {
                            if (c.Id == currentC.CategoryId)
                            {
                                chk = true;
                            }
                        }
                        <li><input type="checkbox" value="@c.Id" name="categoriesId[]" @(chk ? "checked" : "") /> @c.Name</li>
                    }

                </ul>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
